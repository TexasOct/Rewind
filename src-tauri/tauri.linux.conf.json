{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rewind",
  "version": "0.1.0",
  "identifier": "com.rewind.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Login",
        "label": "Login",
        "url": "/auth/login",
        "width": 840,
        "height": 460,
        "fullscreen": false,
        "resizable": false,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
