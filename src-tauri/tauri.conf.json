{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rewind",
  "version": "0.1.0",
  "identifier": "com.rewind.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist",
    "features": [
      "pytauri/standalone"
    ]
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Rewind",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
